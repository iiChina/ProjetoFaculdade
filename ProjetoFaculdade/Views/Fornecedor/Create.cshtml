@model ProjetoFaculdade.Models.Fornecedor
@{
    ViewData["Title"] = "Adicionar Fornecedor";
}
<br />
<h1>Adicionar Fornecedor</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>                
            </div>
            <div class="form-group">
                <label asp-for="Fantasia" class="control-label"></label>
                <input asp-for="Fantasia" class="form-control" />
                <span asp-validation-for="Fantasia" class="text-danger"></span>              
            </div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>                 
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />        
                <span asp-validation-for="Telefone" class="text-danger"></span>        
            </div>

            <div class="form-group" style="padding-top:10px">
                <input type="submit" value="Adicionar" class="btn btn-outline-dark" />
                <a class="btn btn-outline-light text-black" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

