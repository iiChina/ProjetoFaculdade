@model IEnumerable<ProjetoFaculdade.Models.Fornecedor>
@{
    ViewData["Title"] = "Listagem de Fornecedores";
}
<br />
<h1>Fornecedores</h1>
<br />
<p align="right">
    <a class="btn btn-outline-primary asp-action="Create">+</a>
</p>
<table class="table table-striped table-primary">
    <thead>
        <tr
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Fantasia)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th scope="col">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr> 
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Fantasia
                </td>
                <td>
                    @item.Cnpj
                </td>
                <td>
                    @item.Telefone
                </td>

                <td>
                    <a class="btn btn-outline-primary btn-sm edit" data-id="@item.Id">
                        Editar
                    </a> |
                    <a class="btn btn-outline-info btn-sm details" data-id="@item.Id">
                        Detalhes
                    </a> |
                    <a class="btn btn-outline-danger btn-sm delete" data-id="@item.Id">
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modal_fornecedor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="modal"></div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Fornecedor/Details/" + id, function () {
                    $("#modal_fornecedor").modal("show");
                })
            });
            $(".delete").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Fornecedor/Delete/" + id, function () {
                    $("#modal_fornecedor").modal("show");
                })
            });
            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Fornecedor/Edit/" + id, function () {
                    $("#modal_fornecedor").modal("show");
                })
            });
        })
    </script>
}
